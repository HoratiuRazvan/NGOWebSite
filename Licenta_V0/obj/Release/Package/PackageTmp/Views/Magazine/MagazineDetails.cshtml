@model IEnumerable<Licenta_V0.Models.MagazineModels>


<table class="table table-bordered table-responsive">
    <tr>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.MagazineName)
        </th>

        <th class="col-md-2"></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.MagazineName.Substring(0,item.MagazineName.Length - 4)
    </td>

    <td>
        @Html.ActionLink("Download", "DownloadMagazine", new { id = item.Id })
    </td>
    @if (this.User.IsInRole("Editorial") || this.User.IsInRole("Admin"))
    {
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
    }
    
</tr>

    }

</table>  