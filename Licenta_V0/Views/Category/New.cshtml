@model Licenta_V0.Models.CategoryModels



<h2>@Licenta_V0.Resources.CategoryPage.AddCategory</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Category"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("CategoryName", Licenta_V0.Resources.CategoryPage.CategoryName)
    <br />

    @Html.TextBox("CategoryName", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-success" type="submit">@Licenta_V0.Resources.CategoryPage.AddCategory</button>
}