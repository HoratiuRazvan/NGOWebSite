@model Licenta_V0.Models.CategoryModels


<h2>@Licenta_V0.Resources.CategoryPage.EditCategory</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Category"))
{
    @Html.Hidden("CategoryId", Model.Id)

    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("CategoryName", Licenta_V0.Resources.CategoryPage.CategoryName)
    <br />
    @Html.Editor("CategoryName")
    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-success" type="submit">@Licenta_V0.Resources.CategoryPage.EditCategory</button>
}
