@model IEnumerable<Licenta_V0.Models.ContentViewModels>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Page Content", "Create", null, new { @class = "btn btn-primary" })
</p>

<br />
<table class="table" style="width: 1200px;">
    <tr>
        <th>
            <b>Title</b>
        </th>
        <th>
            <b>Content</b>
        </th>
        <th>
            <b>Image</b>
        </th>
        <th>
            <b>Description</b>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleName)
            </td>
            <td style="width: 500px;">
                @Html.Raw(item.ArticleText)
            </td>
            <td>
                <img src="/Content/RetrieveImage/@item.Id" alt="" height=100 width=200 />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleDescription)
            </td>
        </tr>
    }
</table>