@model Licenta_V0.Models.MagazineModels


<h2>Edit</h2>
@using (Html.BeginForm(actionName: "Edit", controllerName: "Magazine"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.Id)
    <br />
    @Html.Label("MagazineName", "Magazine Name")
    <br />
    @Html.Editor("MagazineName")
    @Html.ValidationMessageFor(m => m.MagazineName, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("MagazineDescription", "Magazine Description")
    <br />
    @Html.Editor("MagazineDescription")
    @Html.ValidationMessageFor(m => m.MagazineDescription, "", new { @class = "text-danger" })
    
    <br />
    <br />

    @Html.HiddenFor(m => m.PublishDate)
    <br />

    <button class="btn btn-sm btn-success" type="submit">Modify Magazine</button>
}



